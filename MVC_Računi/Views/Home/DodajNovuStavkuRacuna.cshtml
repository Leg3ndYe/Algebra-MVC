@model StavkaRacuna
@{
    ViewData["Title"] = "Nova stavka racuna";
}

<h1>Nova stavka racuna</h1>

<h4>Stavka racuna</h4>
<hr />
<div class="row">  
    <div class="col-md-5">
        <form asp-action="DodajNovuStavkuRacuna">
            <input type="hidden" name="BrojRacuna" value="@ViewBag.BrojRacuna"/>
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Kolicina</label>
                <input asp-for="Kolicina" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Jedinicna Cijena</label>
                <input asp-for="JedinicnaCijena" class="form-control" />
            </div>
            <div>
                <input type="submit" value="Dodaj na racun" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr />
<p>
    <a href="@Url.Action("DetaljiRacuna", new {id=ViewBag.BrojRacuna})">
        Povratak na racun
        </a>
</p>
<p>
    <a asp-action="Index">Povratak na popis racuna</a>
</p>